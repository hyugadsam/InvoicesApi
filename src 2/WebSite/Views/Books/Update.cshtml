@using WebSite.Models.Books
@model UpdateBookModel
@{
    ViewData["Title"] = $"Update Book {Model.BookId}";
}

<div class="row">
    <div class="col-12">
        <div class="card-header text-center">
            <h1>Actualizar Libro @Model.BookId</h1>
        </div>
        <div class=card-body>
            <form asp-action="Update">
                <input type="hidden" asp-for="BookId" />
                <input type="hidden" asp-for="CreateDate" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h3 class="text-danger"><strong>@TempData["ErrorMessage"]</strong></h3>
                <div class="row">
                    <label class="col-lg-2 col-xs-12 col-form-label" asp-for="Title">Nombre</label>
                  <div class="col-lg-8 col-xs-12">
                    <input class="form-control" type="text" asp-for="Title" />
                  </div>
                  <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="row">
                    <label class="col-lg-2 col-xs-12 col-form-label" asp-for="AuthorList">Autores</label>
                    <div  class="col-lg-8 col-xs-12" style="max-height: 20vh; overflow:auto">
                        
                       @for (var i = 0; i < Model.AuthorList.Count; i++)
                        {
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" checked="@Model.AuthorList[i].Check" name="AuthorsId" id="@Model.AuthorList[i].AuthorId" value="@Model.AuthorList[i].AuthorId">
                                <label class="form-check-label" for="@Model.AuthorList[i].AuthorId" > @Model.AuthorList[i].Name </label>
                            </div>
                        }
                    </div>
                     <span asp-validation-for="AuthorList" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class=mt-3>
                        <button type="submit" class="btn-primary btn" > <i class="bi bi-arrow-up"></i> Actualizar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<a asp-action="Index">Regresa a la lista</a>
