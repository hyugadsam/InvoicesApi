@model WebSite.Models.Books.NewBookModel
@{
    ViewData["Title"] = "Create Book";
}

<div class="row">
    <div class="col-12">
        <div class="card-header text-center">
            <h1>Nuevo Libro</h1>
        </div>
        <div class=card-body>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h3 class="text-danger"><strong>@TempData["ErrorMessage"]</strong></h3>
                <div class="row">
                    <label class="col-lg-2 col-xs-12 col-form-label" asp-for="Title">Titulo</label>
                  <div class="col-lg-8 col-xs-12">
                    <input class="form-control" type="text" asp-for="Title" />
                  </div>
                  <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class=mt-3>
                        <button type="submit" class="btn-primary btn" > <i class="bi bi-send-plus"></i> Enviar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
