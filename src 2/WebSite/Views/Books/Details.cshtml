@model Dtos.Common.FullBookDto

@{
    ViewData["Title"] = $"Detalle Libro {Model?.BookId}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div class="mt-2">
    <div class="row mt-2">
        <div class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BookId)
        </div>
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.BookId)
        </div>
        <div class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </div>
        <div class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </div>
        <div class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreateDate)
        </div>
        <div class = "col-sm-10">
            @Model.CreateDate.ToShortDateString()
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-12">
            @if (Model.AuthorsList?.Count() > 0)
            {
                <table class="table table-bordered">
                     <thead>
                           <tr>
                               <th>id</th>
                               <th>Nombre</th>
                           </tr>
                       </thead>
                       <tbody>
                           @foreach (var item in Model.AuthorsList)
                          {
                              <tr>
                                  <td> @item.AuthorId </td>
                                  <td> @item.Name </td>
                              </tr>
                          }
                       </tbody>
                </table>
            }
            else
            {
                <p><b> El libro aun no tiene autores asignados </b></p>
            }
        </div>
    </div>
</div>
<div style="display:flex">
    <a asp-action="Index">Back to List</a>
    <p> &nbsp; || &nbsp; </p>
    <a asp-action="Update" asp-route-BookId="@Model.BookId"> Edit </a>
</div>
