@model IEnumerable<Dtos.Common.ClientDto>
@{
    ViewData["Title"] = "Clients";
}

<div class="row">
    <div class="col-12">
        <a asp-action="Create" style="float:right" class="btn btn-success m-2" > <i class="bi bi-plus-circle-fill"></i> Crear Cliente </a>
    </div>
    <div class="col-12 text-center">
        <div class="card-header">
            <h1>Lista de Clientes</h1>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                @if (Model.Count() > 0)
               {
                   <table class="table table-bordered" id="a1">
                       <thead>
                           <tr>
                               <th>id</th>
                               <th>Nombre</th>
                               <th>Fecha de Alta</th>
                               <th>Acciones</th>
                           </tr>
                       </thead>
                       <tbody>
                           @foreach (var item in Model)
                          {
                              <tr>
                                  <td>@item.ClientId</td>
                                  <td>@item.Name</td>
                                  <td>@item.EnrollDate.ToShortDateString()</td>
                                  <td>
                                      <a class="btn btn-primary" asp-action="Update" asp-route-ClientId="@item.ClientId"> Editar </a>
                                      <a class="btn btn-info" asp-action="Details" asp-route-ClientId="@item.ClientId"> Detalle </a>
                                      <a class="btn btn-danger" asp-action="Delete" asp-route-ClientId="@item.ClientId"> Eliminar </a>
                                  </td>
                              </tr>
                          }
                       </tbody>
                   </table>
               }
                else
                {
                    <p>No hay registros</p>
                }
            </div>
        </div>
    </div>
</div>

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.Message");
        };
    </script>
}

