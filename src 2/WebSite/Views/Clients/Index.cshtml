@model IEnumerable<Dtos.Common.ClientDto>
@{
    ViewData["Title"] = "Clients";
}

<div class="row">
    <div class="col-12">
        <a asp-action="Create" style="float:right" class="btn btn-success m-2" > <i class="bi bi-plus-circle-fill"></i> Crear Cliente </a>
    </div>
    <div class="col-12 text-center">
        <div class="card-header">
            <h1>Lista de Clientes</h1>
            <div class="row justify-content-end">
                <label for="RecordsSelect" class="col-lg-3 col-md-4 col-xs-12 col-form-label">Registros por Pagina: </label>
                <div class="col-lg-3 col-md-4 col-xs-12">
                    <select id="RecordsSelect" class="form-control">
                    @foreach (var item in ViewBag.ListRecords)
                        {
                            if(ViewBag.RecordsPerPage != null && ViewBag.RecordsPerPage == item){
                                <option value="@item" selected>@item</option>
                            }
                            else
                            {
                                <option value="@item">@item</option>
                            }
                        }
                   </select>
                </div>
           </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                @if (Model.Count() > 0)
               {
                   <table class="table table-bordered" id="a1">
                       <thead>
                           <tr>
                               <th>id</th>
                               <th>Nombre</th>
                               <th>Fecha de Alta</th>
                               <th>Acciones</th>
                           </tr>
                       </thead>
                       <tbody>
                           @foreach (var item in Model)
                          {
                              <tr>
                                  <td>@item.ClientId</td>
                                  <td>@item.Name</td>
                                  <td>@item.EnrollDate.ToShortDateString()</td>
                                  <td>
                                      <a class="btn btn-primary" asp-action="Update" asp-route-ClientId="@item.ClientId"> Editar </a>
                                      <a class="btn btn-info" asp-action="Details" asp-route-ClientId="@item.ClientId"> Detalle </a>
                                      <a class="btn btn-danger" asp-action="Delete" asp-route-ClientId="@item.ClientId"> Eliminar </a>
                                  </td>
                              </tr>
                          }
                       </tbody>
                   </table>
               }
                else
                {
                    <p>No hay registros</p>
                }
            </div>
            <div class="row">
                <div style="float:right" class="me-2 mt-2">
                    @if(Model.Count() > 0 && ViewBag.Page != null){
                        @if(ViewBag.Page > 1)
                        {
                            <a id="btn-back" class="btn btn-secondary" asp-action="Index" asp-route-Page="@(ViewBag.Page - 1)"> Anterior </a>
                        }
                        <a id="btn-next" class="btn btn-secondary" asp-action="Index" asp-route-Page="@((ViewBag.Page > 0 ? ViewBag.Page : 1) + 1)"> Siguiente </a>
                    }else if (ViewBag.Page != null && ViewBag.Page > 0) //Si no hay registros y la pagina no es la 1
                    {
                        <a id="btn-back" class="btn btn-secondary" asp-action="Index" asp-route-Page="@(ViewBag.Page - 1)"> Anterior </a>
                    }
                </div>
                <div class="me-2 mt-2 float-end">
                    <p>
                        Pagina: <b> @(ViewBag.Page > 0 ? ViewBag.Page : 1)</b>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.Message");
        };
    </script>
}

<script>
    const UpdateLinks = () =>{
        let back = document.getElementById('btn-back');
        if(back){
            if(back.href.includes('RecordsPerPage')){
                let position = back.href.indexOf('RecordsPerPage') - 1;
                back.href = back.href.slice(0, position);
            }
            back.href += '&RecordsPerPage=' + document.getElementById('RecordsSelect').value;
        }

        let next = document.getElementById('btn-next');
        if(next){
            if(next.href.includes('RecordsPerPage')){
                let position = next.href.indexOf('RecordsPerPage') - 1;
                next.href = next.href.slice(0, position);
            }
            next.href += '&RecordsPerPage=' + document.getElementById('RecordsSelect').value;
        }
    }

    var select = document.getElementById('RecordsSelect');
    select.addEventListener('change', (ev) => {
        let url = window.location.pathname;
        url += '?Page=1&RecordsPerPage=' + document.getElementById('RecordsSelect').value
        window.location.replace(url);
    });

    window.onload = function () {
        UpdateLinks();
    };
</script>

