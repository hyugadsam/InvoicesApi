@model Dtos.Common.FullClientDto

@{
    ViewData["Title"] = $"Detalle Cliente {Model?.ClientId}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div class="mt-2">
    <div class="row mt-4">
        <div class="row">
            <div class = "col-md-2 col-sm-2 col-xs-4">
                <h6>@Html.DisplayNameFor(model => model.ClientId)</h6>
            </div>
            <div class = "col-md-8 col-sm-10 col-xs-8">
                <h6>@Html.DisplayFor(model => model.ClientId)</h6>
            </div>
        </div>

        <div class="row">
            <div class = "col-md-2 col-sm-2 col-xs-4">
                <h36>@Html.DisplayNameFor(model => model.Name)</h36>
            </div>
            <div class = "col-md-8 col-sm-10 col-xs-8">
                <h6>@Html.DisplayFor(model => model.Name)</h6>
            </div>
        </div>

        <div class="row">
            <div class = "col-md-2 col-sm-2 col-xs-4">
                <h6>@Html.DisplayNameFor(model => model.EnrollDate)</h6>
            </div>
            <div class = "col-md-8 col-sm-10 col-xs-8">
                <h6>@Model.EnrollDate.ToShortDateString()</h3>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-12">
            @if (Model.BorrowedBooks?.Count() > 0)
            {
                <table class="table table-bordered">
                     <thead>
                           <tr>
                               <th>id</th>
                               <th>Titulo</th>
                               <th>Fecha de creacion</th>
                           </tr>
                       </thead>
                       <tbody>
                           @foreach (var item in Model.BorrowedBooks)
                          {
                              <tr>
                                  <td> @item.BookId </td>
                                  <td> @item.Title </td>
                                  <td> @item.CreateDate.ToShortDateString() </td>
                              </tr>
                          }
                       </tbody>
                </table>
            }
            else
            {
                <p><b> El Cliente aun no tiene libros asignados </b></p>
            }
        </div>
    </div>
</div>
<div style="display:flex">
    <a asp-action="Index">Back to List</a>
    <p> &nbsp; || &nbsp; </p>
    <a asp-action="Update" asp-route-ClientId="@Model.ClientId"> Edit </a>
</div>
